mixin footer()
  footer.footer
    .container
      .burger__menu
        a.footer__logo(href="/")
          img(src=require("../../images/components/header/logo.svg"))
        .burger__body
          .accordion.accordion-burger.accordion-burger-catalog
            button.accordion__button(type="button") Каталог
          .accordion.accordion-burger.is-open
            button.accordion__button(type="button") Покупателям
            .accordion__content.start
              .accordion__body
                .burger__links
                  a(href="javascript:void(0);").burger__link Реквизиты
                  a(href="javascript:void(0);").burger__link Наши дизайнеры и мастера
                  a(href="javascript:void(0);").burger__link Гарантия и возврат
                  a(href="javascript:void(0);").burger__link Оплата
                  a(href="javascript:void(0);").burger__link Доставка
          .burger_other-links
            a.burger_other-link(href="javascript:void(0);") Вакансии
            a.burger_other-link(href="javascript:void(0);") Сотрудничество
            a.burger_other-link(href="javascript:void(0);") Контакты
          .burger__contacts
            .burger__contacts-links
              a.burger__contacts-link.burger__contacts-link--mail(href=`${mailHTML}`) #{mail}
              a.burger__contacts-link.burger__contacts-link--tel(href=`${telHTML}`) #{tel}
            .burger__contacts-soc
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/tg.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/vk.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/ok.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/whatsapp.svg"))
          .footer__payments
            img(src=require("../../images/components/footer/payments.svg"))
          .footer__final
            p © 2023 «Новый мир»
            a(href="") Политика конфиденциальности
            a(href="") Договор оферты
        .footer__desk
          .footer__desk-col
            h4 Каталог
            a(href="javascript:void(0);") Обои
            a(href="javascript:void(0);") Свет
            a(href="javascript:void(0);") Пол
            a(href="javascript:void(0);") Краска
            a(href="javascript:void(0);") Камины
            a(href="javascript:void(0);") Элементы декора
          .footer__desk-col
            h4 Покупателям
            a(href="javascript:void(0);") Реквизиты
            a(href="javascript:void(0);") Дизайнеры и мастера
            a(href="javascript:void(0);") Гарантия и возврат
            a(href="javascript:void(0);") Оплата
            a(href="javascript:void(0);") Доставка
          .footer__desk-col
            h4 Вакансии
            a(href="javascript:void(0);") Сотрудничество
            a(href="javascript:void(0);") Контакты
            a.footer__desk-mail(href=`${mailHTML}`) #{mail}
            a.footer__desk-tel(href=`${telHTML}`) #{tel}
            .footer__desk-soc
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/tg.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/vk.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/ok.svg"))
              a(href="javascript:void(0);")
                img(src=require("../../images/components/header/whatsapp.svg"))
          .footer__desk-col
            .footer__desk-last
              p © 2023 «Новый мир»
              a(href="javascript:void(0);") Политика конфиденциальности
              a(href="javascript:void(0);") Договор оферты
            img(src=require("../../images/components/footer/payments.svg"))

